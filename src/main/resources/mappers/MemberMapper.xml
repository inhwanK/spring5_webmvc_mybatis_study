<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="spring5_webmvc_mybatis_study.mappers.MemberMapper">
	<resultMap type="Member" id="resMember">
		<id column="id" property="id" />
		<result column="email" property="email" />
		<result column="name" property="name" />
		<result column="regdate" property="registerDateTime" />
	</resultMap>

	<sql id="selectSQL">
		select id, email, password, name, regdate
		from member
	</sql>

	<sql id="whereSQL">
		<where>
			<if test="regdate != null">
				regdate between #{from} and #{to}
				order by regdate desc;
			</if>
		</where>
	</sql>


	<select id="selectMemberByEmail" resultMap="resMember">
		SELECT id, email,
		password, name, regdate
		FROM member
		WHERE email = #{email}
	</select>

	<select id="selectMemberAll" resultMap="resMember">
		SELECT id, email,
		password, name, regdate
		FROM member
	</select>

	<select id="countMember" resultType="int">
		select count(*) from member
	</select>

	<insert id="insertMember" parameterType="Member">
		insert into
		member
		(email, password, name, regdate)
		values (#{email}, #{password},
		#{name}, now())
	</insert>

	<update id="updateMember">
		update member
		set name=#{name}, password=#{password}
		where email=#{email}
	</update>

	<delete id="deleteMember">
		delete
		from member
		where email=#{email}
	</delete>

